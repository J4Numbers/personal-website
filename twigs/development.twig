{% extends "master.twig" %}

{% block content %}
  <div class="column">
    <h1>Development</h1>
    {% if single == true %}
      <div class="row row_fix">
        <div class="col-lg-4 col-lg-push-8">
          <img src="{{ devel.cover }}" alt="{{ devel.title }}" 
            style="width:100%" />
        </div>
        <div class="col-lg-8 col-lg-pull-4">
          <h2>{{ devel.title }}</h2>
          {{ devel.contents | raw }}
        </div>
      </div>
    {% elseif devel is empty %}
      <p>
        There is nothing here at the moment. Possibly because there was
        never anything here to begin with, or because everything has gone
        and broken into a million pieces.
      </p>
      <p>
        I'll leave it up to you to decide that.
      </p>
    {% else %}
      {% for d in devel %}
        {% if loop.index0 % 3 == 0 %}
          <div class="row row_fix">
        {% endif %}
        <div class="col-lg-4">
          <div class="devel">
            <a href="./development/{{ d.id }}">
              <img class="small_cover img-thumbnail" src="{{ d.cover }}" alt="{{ d.title }}" />
              <p class="devel_title text-center h3">{{ d.title }}</p>
            </a>
          </div>
        </div>
        {% if not loop.index % 3 or loop.last %}
          </div>
        {% endif %}
      {% endfor %}
    {% endif %}
  </div>
{% endblock %}
