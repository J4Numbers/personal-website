{% extends "master.twig" %}

{% block content %}
    <div class="column" >
        <div class="container">
            {% for b in blogs %}
                <div class="jumbotron">
                    <h1>
                        <a href="/test-blog/{{ b.search }}">{{ b.title }}</a>
                    </h1>
                    {{ b.contents|raw }}
                    <p class="text-right">Posted at {{ b.posted }}</p>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}