{% extends "master.twig" %}

{% block carousel %}
    <div id="carousel" class="carousel slide thumb_box center-block slots" data-ride="carousel">
        <!-- Indicators -->
        <ol class="carousel-indicators">
            {% for banner in carousel %}
                <li data-target="#carousel" data-slide-to="{{ loop.index0 }}"
                    class="{% if loop.first %}active{% endif %}"></li>
            {% endfor %}
            {% if carousel is empty %}
                <li data-target="#carousel" data-slide-to="0" class="active"></li>
            {% endif %}
        </ol>

        <!-- Wrapper for slides -->
        <div class="carousel-inner" role="listbox">
            {% for banner in carousel %}
                <div class="item {% if loop.first %}active{% endif %}">
                    <img src="{{ banner.image }}" alt="{{ banner.title }}">
                    <div class="carousel-caption">
                        <h3><a href="{{ banner.link }}">{{ banner.title }}</a></h3>
                    </div>
                </div>
            {% endfor %}
            {% if carousel is empty %}
                <div class="item active">
                    <img src="./assets/images/M4-YT.png" alt="M4Numbers no content">
                    <div class="carousel-caption">
                        <h3>Sorry...</h3>
                        <p>There's nothing here at the moment.</p>
                    </div>
                </div>
            {% endif %}
        </div>

        <!-- Controls -->
        <a class="left carousel-control" href="#carousel" role="button" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#carousel" role="button" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>

    <div class="booster" ></div>
{% endblock %}

{% block navbar_carousel %}
    navbar_fix
{% endblock %}