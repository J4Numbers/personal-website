{% extends "partials/admin_split.njk" %}

{% block admin_content %}
    <h2>Delete Story</h2>
    <div class="story">
        <h3 class="mb-4">{{ content.story.title }}</h3>
        <div class="admin-toolbar">
            <form method="post" action="">
                <p class="alert-danger">Are you sure you want to delete this story?</p>

                <input type="submit" class="btn btn-danger" value="Yes" />
                <a href="/admin/stories/{{ content.story._id }}" class="btn btn-secondary">Cancel</a>
            </form>
        </div>
    </div>
    <hr />

{% endblock %}
