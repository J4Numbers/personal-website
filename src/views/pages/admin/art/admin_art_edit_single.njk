{% extends "partials/admin_split.njk" %}

{% block admin_content %}
    <h2>Edit Art Piece</h2>
    <div class="art-piece">
        <form method="post" enctype="multipart/form-data" action="">
            <label for="art-title">Art Title</label>
            <input type="text" class="form-control" id="art-title" name="art-title" value="{{ content.picture.title }}" />
            <label for="art-completed-date">Created Date</label>
            <input type="date" class="form-control" id="art-completed-date" name="art-completed-date" value="{{ content.picture.date_completed }}" />
            <label for="art-notes">Art Notes</label>
            <textarea class="form-control" id="art-notes" name="art-notes">{{ content.picture.notes }}</textarea>
            <label for="art-tags">Art Tags</label>
            <input type="text" class="form-control" id="art-tags" name="art-tags" value="{{ content.picture.tags | join(", ") }}" />
            <div class="admin-toolbar">
                <input type="submit" class="btn btn-primary" value="Save" />
                <a href="/admin/art/{{ content.picture._id }}" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
    <hr />

{% endblock %}
