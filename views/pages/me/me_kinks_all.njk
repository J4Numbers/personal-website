{% extends "base_layouts/me_base.njk" %}
{% import "macros/content.njk" as c %}

{% block banner_icon %}
    {{ c.img_banner(top_page.image_src, top_page.image_alt) }}
{% endblock %}

{% block me_content %}
    <h2>{{ content.title }}</h2>

    <table class="table table-striped table-hover" id="kink-collection">
        <thead class="thead-dark">
            <tr>
                <td>Kink Name</td>
                <td>Kink Description</td>
            </tr>
        </thead>
        <tbody>
        {% for kink in content.kinks %}
            <tr>
                <td><a href="/hobbies/me/fetishes/{{ kink._id }}">{{ kink.kink_name }}</a></td>
                <td>{{ kink.kink_description }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
