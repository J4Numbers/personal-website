{% extends "partials/admin_split.njk" %}

{% block admin_content %}
    <h2>View Blog Posts</h2>
    {% for blog in content.blogs %}
        <div class="blog-post">
            <h3><a href="/admin/blog/{{ blog._id }}">{{ blog.long_title }}</a></h3>
        </div>
        <hr />
    {% endfor %}

    <div class="admin-toolbar mb-4">
        <a class="btn btn-block btn-primary" href="/admin/blog/new" >Add New Blog Post</a>
    </div>
    {% include "partials/pagination.njk" %}
{% endblock %}