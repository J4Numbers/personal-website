{% extends "partials/admin_split.njk" %}

{% block admin_content %}
    <h2>Edit Project</h2>
    <div class="project-post">
        <form method="post" enctype="application/json" action="">
            <label for="project-title">Project Title</label>
            <input type="text" class="form-control" id="project-title" name="project-title" value="{{ content.project.long_title }}" />
            <label for="project-text">Project Description</label>
            <textarea class="form-control" id="project-text" name="project-text">{{ content.project.description }}</textarea>
            <label for="project-tags">Project Tags</label>
            <input type="text" class="form-control" id="project-tags" name="project-tags" value="{{ content.project.tags | join(", ") }}" />
            <p class="mb-4">
                <label for="project-visible">Project is publicly findable:</label>
                <input id="project-visible" name="project-visible" type="checkbox" {{ "checked=\"checked\"" if content.project.public }} value="Y" />
            </p>
            <div class="admin-toolbar">
                <input type="submit" class="btn btn-primary" value="Save" />
                <a href="/admin/projects/{{ content.project._id }}" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
    <hr />

{% endblock %}