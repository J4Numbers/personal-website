{% extends "partials/admin_split.njk" %}

{% block admin_content %}
    <h2>Delete Kink</h2>
    <div class="kink">
        <h3 class="mb-4">{{ content.kink.kink_name }}</h3>
        <div class="admin-toolbar">
            <form method="post" action="">
                <p class="alert-danger">Are you sure you want to delete this kink?</p>

                <input type="submit" class="btn btn-danger" value="Yes" />
                <a href="/admin/fetishes/{{ content.kink._id }}" class="btn btn-secondary">Cancel</a>
            </form>
        </div>
    </div>
    <hr />

{% endblock %}
