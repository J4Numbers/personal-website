{% extends "partials/admin_split.njk" %}

{% block admin_content %}
    <h2>Delete Art Piece</h2>
    <div class="art-piece">
        <h3 class="mb-4">{{ content.picture.title }}</h3>
        <div class="admin-toolbar">
            <form method="post" action="">
                <p class="alert-danger">Are you sure you want to delete this art piece?</p>

                <input type="submit" class="btn btn-danger" value="Yes" />
                <a href="/admin/art/{{ content.picture._id }}" class="btn btn-secondary">Cancel</a>
            </form>
        </div>
    </div>
    <hr />

{% endblock %}
