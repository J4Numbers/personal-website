{% extends "partials/admin_split.njk" %}

{% block admin_content %}
    <h2>Create Art Piece</h2>
    <div class="blog-post">
        <form method="post" enctype="multipart/form-data" action="">
            <label for="art-title">Art Title</label>
            <input type="text" class="form-control" id="art-title" name="art-title"/>
            <label for="art-image">Art Image</label>
            <input class="form-control-file" id="art-image" name="art-image" type="file" />
            <label for="art-completed-date">Created Date</label>
            <input class="form-control" id="art-completed-date" name="art-completed-date" type="date" />
            <label for="art-notes">Art Notes</label>
            <textarea id="art-notes" name="art-notes" class="form-control" ></textarea>
            <label for="art-tags">Art Tags</label>
            <input type="text" class="form-control" id="art-tags" name="art-tags"/>
            <div class="admin-toolbar">
                <input type="submit" class="btn btn-primary" value="Save" />
                <a href="/admin/art/" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
    <hr />

{% endblock %}
