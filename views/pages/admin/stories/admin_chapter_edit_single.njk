{% extends "partials/admin_split.njk" %}

{% block admin_content %}
    <h2>Edit chapter {{ content.chapter.chapter_number }} of {{ content.story.story_title }}</h2>
    <div class="blog-post">
        <form method="post" action="">
            <label for="chapter-number">Chapter Number</label>
            <input type="text" class="form-control" id="chapter-number" name="chapter-number" value="{{ content.chapter.chapter_number }}"/>
            <label for="chapter-title">Chapter Title</label>
            <input type="text" class="form-control" id="chapter-title" name="chapter-title" value="{{ content.chapter.chapter_title }}"/>
            <label for="chapter-text">Chapter Text</label>
            <textarea id="chapter-text" name="chapter-text" class="form-control" >{{ content.chapter.chapter_text }}</textarea>
            <label for="chapter-comments">Chapter Comments</label>
            <textarea id="chapter-comments" name="chapter-comments" class="form-control" >{{ content.chapter.author_notes }}</textarea>
            <div class="admin-toolbar mt-3">
                <input type="submit" class="btn btn-primary" value="Save" />
                <a href="/admin/stories/{{ content.story._id }}/chapter/{{ content.chapter.chapter_number }}" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
    <hr />

{% endblock %}
