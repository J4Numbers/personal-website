{% extends "partials/admin_split.njk" %}

{% block admin_content %}
    <h2>Create Blog Post</h2>
    <div class="blog-post">
        <form method="post" enctype="application/json" action="">
            <label for="blog-title">Blog Title</label>
            <input type="text" class="form-control" id="blog-title" name="blog-title"/>
            <label for="blog-text">Blog Text</label>
            <textarea class="form-control" id="blog-text" name="blog-text"></textarea>
            <label for="blog-tags">Blog Tags</label>
            <input type="text" class="form-control" id="blog-tags" name="blog-tags"/>
            <p class="mb-4">
                <label for="blog-visible">Blog is publicly findable:</label>
                <input id="blog-visible" name="blog-visible" type="checkbox" value="Y" />
            </p>
            <div class="admin-toolbar">
                <input type="submit" class="btn btn-primary" value="Save" />
                <a href="/admin/blog/" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
    <hr />

{% endblock %}